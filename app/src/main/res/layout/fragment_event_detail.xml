<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".EventsDetail.EventDetailFragment"
             android:padding="4dp">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardOne"
                    app:cardElevation="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="4dp"
                    app:contentPadding="4dp"
                    card_view:cardUseCompatPadding="true">
                <RelativeLayout
                        android:paddingTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/ivImageDetail"
                            android:layout_width="match_parent"
                            android:layout_height="256dp"
                            android:adjustViewBounds="true"/>
                    <TextView
                            android:padding="4dp"
                            android:id="@+id/tvTitleDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ivImageDetail"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:text="titulo"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardTwo"
                    android:layout_gravity="center"
                    app:cardElevation="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="4dp"
                    app:contentPadding="4dp"
                    android:layout_below="@+id/cardOne"
                    card_view:cardUseCompatPadding="true">

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    <ImageView
                            android:id="@+id/ivLocation"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/maps_icon"
                            android:adjustViewBounds="true"/>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="4dp">

                        <TextView
                                android:id="@+id/tvDateDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="data"/>

                        <TextView
                                android:id="@+id/tvPriceDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvDateDetail"
                                android:textSize="14sp"
                                android:text="preco"/>
                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardThree"
                    android:layout_gravity="center"
                    app:cardElevation="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="4dp"
                    app:contentPadding="4dp"
                    android:layout_below="@+id/cardTwo"
                    card_view:cardUseCompatPadding="true">

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/labelDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:text="DescricÃ£o:"/>


                    <TextView
                            android:layout_below="@+id/labelDescription"
                            android:id="@+id/tvDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="descricao"/>

                    <android.support.v7.widget.RecyclerView
                            android:padding="4dp"
                            android:id="@+id/reciclerViewPerson"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_below="@+id/tvDescription"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </RelativeLayout>
    </ScrollView>

</FrameLayout>